{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "FrontDoorname":{
            "type":"string"
        },
        "location":{
            "type":"string",
            "defaultValue": "Global"
        },
        "frontend_webapp":{
            "type":"string"
        },
        "backend_webapp":{
            "type":"string"
        },
        "WafPolicyName":{
            "type":"string"
        },
        "CreatedAt":{
            "type":"string",
            "defaultValue": "[utcNow('d')]"
        },
        "project":{
            "type":"string",
            "defaultValue":""
        },
        "createdBy":{
            "type":"string",
            "defaultValue":""
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2022-05-01-preview",
            "name": "[parameters('FrontDoorname')]",
            "location": "[parameters('location')]",
             "tags": {
                "project": "[parameters('project')]",
                "createdBy": "[parameters('createdBy')]",
                "createdAt": "[parameters('CreatedAt')]"
            },
            "sku": {
                "name": "Premium_AzureFrontDoor"
            },
            "kind": "frontdoor",
            "properties": {
                "originResponseTimeoutSeconds": 30,
                "extendedProperties": {}
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/',parameters('FrontDoorname'))]",
            "location": "Global",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]"
            ],
            "properties": {
                "enabledState": "Enabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/gtoicebackendpoolbe')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]"
            ],
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 2,
                    "additionalLatencyInMilliseconds": 0
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Https",
                    "probeIntervalInSeconds": 30
                },
                "sessionAffinityState": "Disabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/gtoicebackendpoolfe')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]"
            ],
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 2,
                    "additionalLatencyInMilliseconds": 0
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Https",
                    "probeIntervalInSeconds": 30
                },
                "sessionAffinityState": "Disabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups/origins",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/gtoicebackendpoolbe/backendorigin')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolbe')]",
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]"
            ],
            "properties": {
                "hostName": "[concat(parameters('backend_webapp'), '.azurewebsites.net')]",
                "httpPort": 80,
                "httpsPort": 443,
                "originHostHeader": "[concat(parameters('backend_webapp'), '.azurewebsites.net')]",
                "priority": 1,
                "weight": 1000,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups/origins",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/gtoicebackendpoolfe/frontendorigin')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolfe')]",
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]"
            ],
            "properties": {
                "hostName": "[concat(parameters('frontend_webapp'), '.azurewebsites.net')]",
                "httpPort": 80,
                "httpsPort": 443,
                "originHostHeader": "[concat(parameters('frontend_webapp'), '.azurewebsites.net')]",
                "priority": 1,
                "weight": 1000,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/securitypolicies",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/',parameters('WafPolicyName'),'-securityPolicy')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]",  
                "[resourceId('Microsoft.Cdn/profiles/afdendpoints', parameters('FrontDoorname'), parameters('FrontDoorname'))]"
                ],
            "properties": {
                "parameters": {
                    "wafPolicy": {
                        "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourcegroups/',resourceGroup().name,'/providers/Microsoft.Network/frontdoorwebapplicationfirewallpolicies/',parameters('WafPolicyName'))]"
                    },
                    "associations": [
                        {
                            "domains": [
                                {
                                    "id": "[resourceId('Microsoft.Cdn/profiles/afdendpoints', parameters('FrontDoorname'), parameters('FrontDoorname'))]"
                                }
                            ],
                            "patternsToMatch": [
                                "/*"
                            ]
                        }
                    ],
                    "type": "WebApplicationFirewall"
                }
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'), '/',parameters('FrontDoorname'),'/',parameters('FrontDoorname'),'routingrulebe')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/afdendpoints', parameters('FrontDoorname'), parameters('FrontDoorname'))]",
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]",
                "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolbe')]"
            ],
            "properties": {
                "customDomains": [],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolbe')]"
                },
                "ruleSets": [],
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/api/*"
                ],
                "forwardingProtocol": "HttpsOnly",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "Disabled",
                "enabledState": "Enabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('FrontDoorname'),'/',parameters('FrontDoorname'),'/',parameters('FrontDoorname'),'routingrulefe')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/afdendpoints', parameters('FrontDoorname'),parameters('FrontDoorname'))]",
                "[resourceId('Microsoft.Cdn/profiles', parameters('FrontDoorname'))]",
                "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolfe')]"
            ],
            "properties": {
                "customDomains": [],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/origingroups', parameters('FrontDoorname'), 'gtoicebackendpoolfe')]"
                },
                "ruleSets": [],
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "forwardingProtocol": "HttpsOnly",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "Disabled",
                "enabledState": "Enabled"
            }
        }
    ]
}